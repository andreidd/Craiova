<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="ro.craiova.craiova.pages.main.MainFragment">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@drawable/craiova7" />

        <View
            android:background="@color/lineSeparator"
            android:layout_width="match_parent"
            android:layout_height="@dimen/separator" />


        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:text="@string/welcome"
            android:textColor="@color/textColor"
            android:textSize="24sp" />

        <View
            android:background="@color/lineSeparator"
            android:layout_width="match_parent"
            android:layout_height="@dimen/separator" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@color/fragmentBackgroundColor"
            android:clickable="true"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/addReport"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:paddingBottom="16dp"
                android:clickable="true"
                android:paddingTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    
                    android:gravity="center"
                    android:text="Sesizari"
                    android:textColor="@color/textColor"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:drawableLeft="@drawable/ic_warning_black_24dp"
                    android:drawablePadding="8dp"
                    android:drawableTint="@color/colorAccent"
                    android:text="Adauga sesizare"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp" />

            </LinearLayout>

            <View
                android:background="@color/lineSeparator"
                android:layout_width="@dimen/separator"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:id="@+id/myReports"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:paddingBottom="16dp"
                android:paddingTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:alpha="0.7"
                    android:gravity="center_horizontal"
                    android:text="Sesizarile mele"
                    android:textColor="@color/textColor"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/ic_dvr_black_24dp"
                    android:drawablePadding="8dp"
                    android:drawableTint="@color/colorAccent"
                    android:text="20 sesizari"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:background="@color/lineSeparator"
            android:layout_width="match_parent"
            android:layout_height="@dimen/separator" />

        <LinearLayout
            android:id="@+id/callPolice"
            android:clickable="true"
            android:background="@color/fragmentBackgroundColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:paddingBottom="16dp"
                android:paddingTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:alpha="0.7"
                    android:gravity="center"
                    android:text="Dispecerat politie"
                    android:textColor="@color/textColor"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:drawableLeft="@drawable/ic_phone_black_24dp"
                    android:drawablePadding="8dp"
                    android:drawableTint="@color/colorAccent"
                    android:gravity="center"
                    android:text="0251/542.235"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp" />

            </LinearLayout>

            <View
                android:background="@color/lineSeparator"
                android:layout_width="@dimen/separator"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:id="@+id/callMayor"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:paddingBottom="16dp"
                android:paddingTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:alpha="0.7"
                    android:gravity="center_horizontal"
                    android:text="Telefonul primariei"
                    android:textColor="@color/textColor"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/ic_phone_black_24dp"
                    android:drawablePadding="8dp"
                    android:drawableTint="@color/colorAccent"
                    android:text="0251/475.235"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:background="@color/lineSeparator"
            android:layout_width="match_parent"
            android:layout_height="@dimen/separator" />

    </LinearLayout>
</ScrollView>